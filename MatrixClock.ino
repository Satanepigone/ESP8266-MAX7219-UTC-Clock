//characters into arr
void char2Arr(unsigned short ch, int PosX, short PosY, unsigned short const typeface[96][9]) 
{
	int charX, j, k, line, dot, bitmask, matrixIndex, lineMask, charWidth;			//in LEDarr, lineMask is bitmask of current line
	PosX--;		//1~32 -> 0~31; human coordinate to machine coordinate
	k = ch - 32;			//ASCII position in font
	if ((k >= 0) && (k < 96))			//character found in font?
	{
		charWidth = typeface[k][0];			//character width
		//lineMask = 1 << (charWidth - 2);
		lineMask = 1 << (charWidth - 1);
		for (charX = 0; charX < charWidth; charX++) 
		{
			if (((PosX + charX <= maxPosX) && (PosX + charX >= 0)) && ((PosY > -8) && (PosY < 8)))			//within matrix?
			{
				bitmask = helpArrPos[PosX + charX];
				matrixIndex = helpArrMAX[PosX + charX];
				for (j = 0; j < 8; j++) {
					if (((PosY >= 0) && (PosY <= j)) || ((PosY < 0) && (j < PosY + 8)))			//scroll vertical
					{
						line = typeface[k][j + 1];		//get the (j+1)-th line of the character from typeface
						dot = (line & (lineMask >> charX));			//e.g. charWidth=7  0zzzzz0, charWidth=4  0zz0
						//dot : px of (j+1)-th row/y, (charX+1)-th col/x of the char
						if (dot > 0)
							LEDarr[matrixIndex][j - PosY] = LEDarr[matrixIndex][j - PosY] | (bitmask);			//set point
						else
							LEDarr[matrixIndex][j - PosY] = LEDarr[matrixIndex][j - PosY] & (~bitmask);			//clear point
					}
				}
			}
		}
	}
}
