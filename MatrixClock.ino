// get time from NTP server and write into RTC
bool syncRTC2NTP()
{
	tm* tt;
	tt = connectNTP();
	if (tt != NULL)
	{
		rtc.adjust(DateTime(tt->tm_year - 100, tt->tm_mon + 1, tt->tm_mday, tt->tm_hour, tt->tm_min, tt->tm_sec));
		delete(tt);
		tt = NULL;
		return true;
	}
	else
	{
		Serial.println("no timepacket received");
		return false;
	}
}
