void rtc2mez() {
 
	unsigned short Year, Day, Month, WeekDay, Hour, Minute, Second;
	DateTime now = rtc.now();
	Year = now.year();			//年
	if (Year > 99)
		Year = 0;
	Month = now.month();			//月
	if (Month > 12)
		Month = 0;
	Day = now.day();			//天
	if (Day > 31)
		Day = 0;
	WeekDay = now.dayOfTheWeek();			//星期
	if (WeekDay == 7)
		WeekDay = 0;
	Hour = now.hour();			//小时
	if (Hour > 23)
		Hour = 0;
	Minute = now.minute();			//分钟
	if (Minute > 59)
		Minute = 0;
	Second = now.second();			//秒
	if (Second > 59)
		Second = 0;
	
	MEZ.WD = WeekDay;			//日=0, 一=1, 二=2 ...
	MEZ.sec_ones = Second % 10;
	MEZ.sec_tens = Second / 10;
	MEZ.sec_whole = Second;
	MEZ.min_ones = Minute % 10;
	MEZ.min_tens = Minute / 10;
	MEZ.min_whole = Minute;
	MEZ.hr_ones = Hour % 10;
